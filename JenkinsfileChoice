#!/usr/bin/env groovy
library("my-shared-library@master") _

//String items = populateItems(cons.servers)
String populateItems(Map serversList){
    List DEVList = serversList['DEV']['APP'].collect{ '"' + it + '"'}
    List BATList = serversList['BAT']['APP'].collect{ '"' + it + '"'}
    List PATList = serversList['PAT']['APP'].collect{ '"' + it + '"'}
    List PRODList= serversList['PROD']['APP'].collect{ '"' + it + '"'}
    List DRList = serversList['DR']['APP'].collect{ '"' + it + '"'}
    List QAList = serversList['QA']['APP'].collect{ '"' + it + '"'}
    return """if(Categories.equals('DEV')){
        return $DEVList
        }
        else if(Categories.equals('BAT')){
        return $BATList
        }else{
        else if(Categories.equals('PAT')){
        return $PATList
        }else{
        else if(Categories.equals('PROD')){
        return $PRODList
        }else{
        else if(Categories.equals('DR')){
        return $DRList
        }else{
        else if(Categories.equals('QA')){
        return $QAList
        }else{
        return ["Not Applicable"]
        }
        """
}
println( cons.selectServers())
// Properties step to set the Active choice parameters via 
// Declarative Scripting
properties([
    parameters([
        choice(name: 'Categories', choices: cons.envir, description: 'input cluster'),
       [$class: 'CascadeChoiceParameter', choiceType: 'PT_SINGLE_SELECT',name: 'Items', referencedParameters: 'Categories', 
          script: [$class: 'GroovyScript', fallbackScript: [classpath: [], sandbox: false, script: 'return ["error"]'], 
              script: [classpath: [], sandbox: false, script: populateItems(cons.servers)]]]
    ])
])
pipeline {
    agent any
stages {
   stage('Build'){
    steps {
       echo 'Building..'
      }
    }
   }
}
